


def factorial(i: Int): Int = {
  if (i == 1) 1
  else i * factorial(i - 1)
}

def expansion(i: Int, acc: Double, x: Double): Double = {
  if (i == 10) acc
  else acc + expansion(i + 1, math.pow(x, i) / factorial(i), x)
}
